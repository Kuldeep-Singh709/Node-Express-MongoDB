<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />

    <title>Profile </title>

    <meta name="author" content="Codeconvey" />
    <link rel='stylesheet' href="https://fonts.googleapis.com/css?family=Lato:300,400,700,900&display=swap">
    <link rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.min.css'>
    <link rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.1/css/all.min.css'>


    <link rel="stylesheet" type="text/css" href="../../Public/css/user/profile.css">


    <style>
        body {
            background: #67B26F;
            /* fallback for old browsers */
            background: -webkit-linear-gradient(to right, #4ca2cd, #67B26F);
            /* Chrome 10-25, Safari 5.1-6 */
            background: linear-gradient(to right, #4ca2cd, #67B26F);
            /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
            padding: 0;
            margin: 0;
            font-family: 'Lato', sans-serif;
            color: #000;
        }

        .topbtn {
            display: flex;
            justify-content: space-between;

        }

        .topbtn li {
            list-style-type: none;
        }

        .logout {
            background-color: rgb(251, 249, 246);
            margin: 10px;
            border-radius: 20px;
            /* height: 30px;
            width: 20px; */
        }

        .topHeader {
            background-color: #6a89cc;
            /* border: 3px solid #a5b1c2; */
            /* width: 200px;
            height: 200px; */
            /* border: 2px solid #ccc; */
            box-shadow: 0px 0px 5px 0px rgba(0, 0, 0, 0.75) inset;
        }




        .topbtn button {

            display: inline-block;
            border-radius: 4px;
            background-color: aliceblue;
            color: #000;
            text-decoration: none;
            border: none;
            border-radius: 5px;
            /* color: #FFFFFF; */
            text-align: center;
            font-size: 20px;
            padding: 10px;
            width: 100px;
            transition: all 0.5s;
            cursor: pointer;
            margin: 5px;
        }

        .topbtn button span {
            cursor: pointer;
            display: inline-block;
            position: relative;
            transition: 0.5s;
        }

        .topbtn button span:before {
            /* Use ::before instead of ::after */
            content: '\00AB';
            /* Unicode character for left arrow */
            position: absolute;
            opacity: 0;
            top: 0;
            left: -10px;
            /* Adjust the left position */
            transition: 0.5s;
        }

        .topbtn button:hover span {
            padding-left: 15px;
            color: orangered;
        }

        .topbtn button:hover span:before {
            opacity: 1;
            left: 0;
        }

        .student-profile .card {
            border-radius: 10px;
        }

        .student-profile .card .card-header .profile_img {
            width: 150px;
            height: 150px;
            object-fit: cover;
            margin: 10px auto;
            border: 10px solid #ccc;
            border-radius: 50%;
        }

        .student-profile .card h3 {
            font-size: 20px;
            font-weight: 700;
        }

        .student-profile .card p {
            font-size: 16px;
            color: #000;
        }

        .student-profile .table th,
        .student-profile .table td {
            font-size: 14px;
            padding: 5px 10px;
            color: #000;
        }

        table {
            border-collapse: collapse;
            width: 96%;
            border: 1px solid black;
            /* background-color: rgb(239, 215, 183); */
            /* background-color: #c7ecee; */
            background-color: #95afc0;
            margin: 10px;
        }

        th,
        td {
            text-align: left;
            padding: 4px;
            /* border: 1px solid #ddd; */
        }
        /* td{
            color: white;
        } */

        th {
            background-color: #f2f2f2;
        }


        .t-op-nextlvl {
            font-size: 14px;
            letter-spacing: 0px;
            font-weight: 600;
            color: whitesmoke;
        }

        .item1 {

            width: 700px;
            border-bottom: 15px solid white;
            border-radius: 10px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-top: 10px;
        }

        .tdtag {
            width: 100%;
            text-align: center;
            vertical-align: middle;
        }
        

        .tdtitle {
            width: 70%;
            border-radius: 8px;
            background-color: #2e86de;
            border: 1px solid #ddd;
            margin-left: 3px;
            padding: 8px;
        }


        
   
        .returnBtn {
            padding: 10px;
            cursor: pointer;
            border: none;
            background-color: rgb(152, 151, 151);
            color: black;
            border-radius: 5px;
            /* border: 1px solid #ddd; */
            border: 1px solid #ee5253;
        }

        .returnBtn:hover {
            /* background: rgb(139, 139, 234); */
            background: #ee5253;
            color: white;
         }



        .profile-img-container {
            /* position: relative; */
            display: inline-block;
        }

        .profile_img {
            max-width: 100%;
            height: auto;
        }

        .edit-button {
            background-color: transparent;
            padding: 0px;
            margin: 10px;
            cursor: pointer;
        }

        /* Style the button on hover if needed */
        .edit-button:hover {
            text-decoration: underline;
        }

        .imageForm {
            display: grid;
        }

        .image_uploadBtn {
            width: 80px;
            font-size: 15px;
            margin-left: 43px;
            background-color: #eeeeee;
            border: none;
            cursor: pointer;
        }

        .onlyLine {
            border-bottom: 3px solid gray;
            margin: 20px;
        }

        .userName {
            font-size: 50px;
            padding: 12px;
            margin-top: 20px;
            background-color: rgb(241, 230, 214);
            /* border-radius: 20px; */
        }

        .nav-option {
            width: 210px;
            height: 60px;
            display: flex;
            align-items: center;
            padding: 0 30px 0 20px;
            gap: 20px;
            transition: all 0.1s ease-in-out;
        }

        .nav-option:hover {
            border-left: 5px solid #a2a2a2;
            background-color: #dadada;
            cursor: pointer;
        }

        .nav-img {
            height: 30px;
        }

        .backBtn{
            margin-top: 5px;
        }
        .line{
            border-bottom: 3px solid grey;
            border-radius: 8px;
            margin-bottom: 20px;
            margin-left: 4px;
            margin-right: 4px;
        }
    </style>
</head>

<body>

    <div class="ScriptTop">
        <div class="rt-container">
            <div class="col-rt-4" id="float-right">

                <!-- Ad Here -->

            </div>
            <div class="col-rt-2 topHeader">
                <ul class="topbtn">
                    <!-- <li><button onclick="window.location.href='/dashboard'" title="Back to DashBoard"><-Back</button></li> -->
                    <li class="backBtn"><button class="button" style="vertical-align:middle" onclick="window.location.href='/dashboard'"
                            title="Back to DashBoard"><span>Back </span></button></li>
                    <li class="nav-option logout">
                        <img src="https://media.geeksforgeeks.org/wp-content/uploads/20221210183321/7.png"
                            class="nav-img" alt="logout">
                        <h3 onclick="window.location.href='/userlogout'">Logout</h3>
                    </li>

                </ul>
            </div>
        </div>
    </div>

    <header class="ScriptHeader">
        <div class="rt-container">
            <div class="col-rt-12">
                <div class="rt-heading">
                    <!-- <h1></h1> -->
                </div>
            </div>
        </div>
    </header>

    <section>
        <div class="rt-container">
            <div class="col-rt-12">
                <div class="Scriptcontent">

                    <!-- Student Profile -->
                    <div class="student-profile py-4">
                        <div class="container">
                            <div class="row">
                                <div class="col-lg-4">
                                    <div class="card shadow-sm">
                                        <div class="card-header bg-transparent text-center">
                                            <div class="profile-img-container">
                                                <!-- <img class="profile_img" src="/uploads/<%= foundUser.profilePicture || 'https://source.unsplash.com/600x300/?student' %>" alt="student dp"> -->
                                                <form action="/upload-profile-picture" method="POST" class="imageForm"
                                                    enctype="multipart/form-data">
                                                    <label for="profilePicture" class="edit-button">
                                                        <img class="profile_img"
                                                            src="/uploads/<%= foundUser.profilePicture || 'https://source.unsplash.com/600x300/?student' %>"
                                                            alt="student dp">
                                                    </label>
                                                    <input type="file" id="profilePicture" name="profilePicture"
                                                        accept="image/*" style="display: none;">
                                                    <input type="submit" value="Upload" class="image_uploadBtn">
                                                </form>
                                            </div>
                                            <h2 class="onlyLine"></h2>
                                            <h3 class="userName">
                                                <%= foundUser.username %>
                                            </h3>
                                        </div>




                                        <!-- Show Upload Status -->
                                        <% if (typeof uploadMessage !=='undefined' ) { %>
                                            <p>
                                                <%= uploadMessage %>
                                            </p>
                                            <% } %>
                                                <div class="card-body">
                                                    <p class="mb-0"><strong class="pr-1">Student ID:</strong>321000001
                                                    </p>
                                                    <p class="mb-0"><strong class="pr-1">Class:</strong>
                                                        <%= foundUser.studentClass%>
                                                    </p>
                                                    <p class="mb-0"><strong class="pr-1">Section:</strong>A</p>
                                                </div>
                                    </div>
                                </div>
                                <div class="col-lg-8">
                                    <div class="card shadow-sm">
                                        <div class="card-header bg-transparent border-0">
                                            <h3 class="mb-0"><i class="far fa-clone pr-1"></i>General Information</h3>
                                        </div>
                                        <div class="card-body pt-0">
                                            <table class="table table-bordered">
                                                <tr>
                                                    <th width="30%">Roll No</th>
                                                    <td width="2%">:</td>
                                                    <td>125</td>
                                                </tr>
                                                <tr>
                                                    <th width="30%">Academic Year </th>
                                                    <td width="2%">:</td>
                                                    <!-- <td>2020</td> -->
                                                    <td>
                                                        <%= foundUser.academicYear %>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <th width="30%">Gender</th>
                                                    <td width="2%">:</td>
                                                    <td>
                                                        <%= foundUser.gender%>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <th width="30%">Email Id</th>
                                                    <td width="2%">:</td>
                                                    <td>
                                                        <%= foundUser.email%>
                                                    </td>
                                                </tr>

                                                <tr>
                                                    <th width="30%">City</th>
                                                    <td width="2%">:</td>
                                                    <td>
                                                        <%= foundUser.city%>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <th width="30%">State</th>
                                                    <td width="2%">:</td>
                                                    <td>
                                                        <%= foundUser.state%>
                                                    </td>
                                                </tr>
                                            </table>
                                        </div>
                                    </div>
                                    <div style="height: 26px"></div>
                                    <div class="card shadow-sm">
                                        <div class="card-header bg-transparent border-0">
                                            <h3 class="mb-0"><i class="far fa-clone pr-1"></i>Issued Book's</h3>
                                        </div>

                                        <div class="line"></div>
                                        <table>
                                            <tbody class="tablebody">
                                                <% foundUser.issuedBooks.forEach(book=> { %>
                                                    <tr class="item1">
                                                        <td class="t-op-nextlvl tdtag tdtitle">
                                                            <%= book.Title %>
                                                        </td>
                                                        <td class="t-op-nextlvl">
                                                            <form action="/returnBook" method="POST">
                                                                 <input type="hidden" name="bookTitle" value="<%= book.Title %>">
                                                                  <button type="submit" class="returnBtn">Return</button>
                                                            </form>
                                                        </td>
                                                    </tr>

                                                 <% }); %>
                                            </tbody>
                                        </table>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- partial -->

                </div>
            </div>
        </div>
    </section>



    <!-- Analytics -->

</body>

</html>