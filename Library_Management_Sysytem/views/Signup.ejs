<!DOCTYPE html>

<html lang="en" dir="ltr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> User Registration </title>
    <link rel="stylesheet" href="/css/signup.css">

</head>

<body>

    <div class="wrapper">
        <h2 class="heading">Registration</h2>

        <form action="/register" method="post">
            <div class="input-box">
                <input type="text" name="username" placeholder="Enter your name" required>
            </div>
            <div class="input-box">
                <input type="text" name="email" placeholder="Enter your email" required>
            </div>
            <div class="input-box">
                <input type="password" name="password" placeholder="Create password" required>
            </div>
            <div class="input-box">
                <input type="password" name="confirmPassword" placeholder="Confirm password" required>
            </div>

            <!-- <div class="gender">
                <h3>Gender</h3>
                <input type="radio" value="None" id="male" name="gender" checked />
                <label for="male" class="radio" chec>Male</label>
                <input type="radio" value="None" id="female" name="gender" />
                <label for="female" class="radio">Female</label>
            </div> -->

            <div class="gender-box">
                <h3>Gender</h3>
                <div class="gender-option">
                  <div class="gender">
                    <input type="radio" id="check-male" name="gender" value="Male" checked />
                    <label for="check-male">male</label>
                  </div>
                  <div class="gender">
                    <input type="radio" id="check-female" name="gender" value="Female" />
                    <label for="check-female">Female</label>
                  </div>
                  <div class="gender">
                    <input type="radio" id="check-other" name="gender" value="Other" />
                    <label for="check-other">prefer not to say</label>
                  </div>
                </div>
              </div>

            <div class="column">

                <div class="input-box">
                    <input type="number" name="academicYear" placeholder="Enter Academic Year" required>
                </div>
                <div class="input-box">
                    <input type="number" name="studentClass" placeholder="Enter your class" required>
                </div>

            </div>
            <div class="column">
                <div class="input-box">
                    <select name="state">
                        <option hidden>State</option>
                        <option>Madhya Pradesh</option>
                        <option>Mharastra</option>
                        <option>Rajsthan</option>
                        <option>NUtter Pradesh</option>
                        <option>Gujrat</option>
                        <option>Hariyana</option>
                    </select>
                </div>
                <div class="citybox">
                    <input type="text" name="city" placeholder="Enter your city" required />
                </div>
            </div>

            <div class="policy">
                <input type="checkbox">
                <h3>I accept all terms & condition</h3>
            </div>
            <div class="input-box button">
                <input type="Submit" value="Register Now" onclick="window.location.href='/register'">
                <!-- <input type="Submit" value="Register Now" > -->
            </div>
            <div class="text">
                <h3>Already have an account? <a onclick="window.location.href='/Loginpage'">Login now</a></h3>
            </div>
        </form>
    </div>

</body>

</html>